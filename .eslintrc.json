{
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "es6": true,
    "commonjs": true
  },
  "rules": {
    "indent": ["error", 2],
    "quotes": [
      "error",
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "semi": [
      "error",
      "never"
    ]
  }
}